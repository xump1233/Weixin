/* pages/music_play/music_play.wxss */

.music_nav{
    width: 100%;
    display: flex;
    justify-content: space-between;
    background-color: skyblue;
    height: 100rpx;
    align-items: center;
}


.music_nav>view{
    height:100%;
    /* width: 33%; */
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    border-bottom:4rpx solid white;
}

.active{
    background-color: rgb(49, 99, 119);
    color: white;
    border-color: aqua;
    border-bottom:4rpx solid #666 !important;
}

.myswiper{
    width: 100%;
    height: 100vh;
}
.myswiper_item{
    background-color: rgba(199, 159, 167,0.5);
}

.recommend>view{
    margin: 0px 20rpx;
}

.c_swiper{
    width: 100%;
}
.c_swiper_item{
    width: 100%;
}
.c_swiper_item>image{
    width: 100%;
    height: 100%;
}

.c_icons{
    width: 100%;
    display: flex;
    justify-content: space-around;
    height: 150rpx;
}
.c_icons_item{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin:20rpx 0;
}
.c_icons_item image{
    width: 130rpx;
    height: 130rpx;
}
.c_icons_item:nth-child(2) image{
    width: 70rpx;
}
.c_icons_item:last-child image{
    width: 88rpx;
}
.hot_music{
    display: flex;
    flex-direction: column;
}
.hot_music>view:first-child{
    margin:10rpx 0;

}
.hot_music>view:last-child{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
.hot_music>view:last-child>view{
    width: 30%;
    height: 280rpx;
    margin-bottom: 6rpx;
}
.hot_music>view:last-child image{
    width: 100%;
    height: 60%;
    
}

.player{
    height: 120rpx;
    background-color: #999;
    position: fixed;
    width: 100%;
    margin:0;
    left: 0rpx;
    bottom:0;
    display: flex;
    align-items: center;
}
.player image{
    height: 80%;
    width:100rpx;
    margin-left:10rpx;
}
.list_item{
    height: 120rpx;
    width: 100%;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #999;
}
.list_item image{
    height: 80%;
    width:100rpx;
    margin-left:10rpx;
}
.player_text{
    margin-left: 20rpx;
}
.player_text>view:last-child{
    color:#555;
    font-size: 28rpx;
}
.p_icons{
    flex-grow: 1;
    display: flex;
    height: 100%;
    justify-content:flex-end;
    align-items: center;
}
.p_icons image{
    width: 20%;
    height: 80%;
    margin:0 10rpx;
}
.p_icons image:last-child{
    height: 100%;
}

.d_player{
    /* background-color: rgba(255, 102, 102,0.1); */
}
.d_player .title{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin:60rpx 0;
    color:#999;
}
.d_player .title>view:first-child{
    font-size: 40rpx;
    color: #000;

}
.d_image{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    width: 100%;
    height: 600rpx;
}
.d_image image{
    width: 500rpx;
    height: 500rpx;
    border-radius: 50%;
}
.d_line{
    margin:20rpx 0;
}